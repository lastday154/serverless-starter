{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "comma-dangle": "off",
    "no-use-before-define": "off",
    "arrow-parens": ["error", "always"],
    "max-len": ["error", 200],
    "indent": ["error", 4],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}